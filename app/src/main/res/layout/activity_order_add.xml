<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.bookshop.ui.OrderAddActivity"
    android:gravity="center_horizontal"
    android:orientation="vertical">

    <ImageView
        android:id="@+id/order_add_bookicon"
        android:layout_marginTop="40dp"
        android:layout_width="200dp"
        android:layout_height="200dp" />

    <com.bookshop.view.FormTextInputView
        android:id="@+id/order_add_bookname"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />
    <com.bookshop.view.FormTextInputView
        android:id="@+id/order_add_bookprice"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />
    <com.bookshop.view.FormTextInputView
        android:id="@+id/order_add_buycount"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />


    <Button
        android:id="@+id/order_add_submit"
        android:layout_margin="40dp"
        android:text="购买"
        android:layout_width="match_parent"
        android:layout_height="40dp" />
</LinearLayout>
